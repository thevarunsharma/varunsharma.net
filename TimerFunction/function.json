{
  "scriptFile": "__init__.py",
  "bindings": [
    {
      "type": "timerTrigger",
      "direction": "in",
      "name": "mytimer",
      "schedule": "0 0 0 * * 0"  // Every Sunday at 00:00 UTC
    },
    {
      "authLevel": "function",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": ["get", "post"]
    },
    {
      "type": "http",
      "direction": "out",
      "name": "$return"
    }
  ]
}
